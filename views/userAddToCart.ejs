                  <!DOCTYPE html>
                  <html>

                  <head>
                      <title>Products</title>
                      <link href="/../style.css" rel="stylesheet">
                      <script src="/../js/all.js" type="text/javascript"></script>
                  </head>

                  <body>
                      <h2 align="center">Add To Cart</h2>
                      <span class="login">
                           <h4>Welcome To view Products:  </h4>
                           <strong>
                           <h1><%=sess.firstname%>&nbsp;<%=sess.lastname%></h1>
                           <strong>
                        </span>
                      <div class="page-container">
                          <div class="page-data" align="center">
                              <div class="data-btn" align="center"></div>
                              <a button class="btn btn-primary" href="/user/home">Home</a><span>
                              <a button class = "btn btn-warning" href="/user/products">View Products</a><span>
                              <a button class = "btn btn-info" href="/user/view/orders">View Orders</a><span>
                              <hr>
                              <ul>
                                 <li>
                                    <a href="/logout" role="button" class=""> Logout</a>
                                 </li>
                              </ul>

                               <form action="/user/confirmQuantity/<%=product_id%>/<%=productQuantity%>/<%=productPrice%>" method="POST">
                              <table border="1" cellpadding="1" cellspacing="10" align="center" style=   "width: 100%">
                                 <tr>
                                    <th width="50px">No</th>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>Quantity Available</th>
                                    <th>Price </th>
                                    <th> Cancel Order</th>
                                 </tr>
                                 <%
                                    for(var i=0;i<data.length;i++){
                                    
                                    %>
                                 <tr align="center">
                                    <td width="50px"> <%=i+1 %></td>
                                    <td><%=data[i].productName %></td>
                          
                          <th>  <img src="<%=data[i].productImage%>" alt= "<%=data[i].productName%>" width="350", height="50"/></th>

                                    <td><%=data[i].productQuantity %></td>
                                    <td><%=data[i].productPrice %></td>
                                    <td> <a button class="btn btn-danger" href="/user/products">Cancel</a></td>
                                    <!-- <td> <a button class="btn btn-primary" href="/user/products/confirm/<%=data[i].product_id%>">Confirm Order</a></td> -->
                                 </tr>
                                 <%}%>
                              </table>
                              <hr>
                              <hr>
                             
                                 <div class="control-group">
                                    <!-- Quantity -->
                                   
                                          <input type="number" name="orderQuantity" min="1" required>

                                       
                                   <td>
                                    <button input type="submit" class="btn btn-primary">confirm order</button>
                                 </td>
                              </form>
                              
                           </div>
                        </div>
                        </div>
                        </div>
                     </body>
                     <link rel="stylesheet"
                        href="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css">
                     <link rel="stylesheet"
                        href="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap-theme.min.css">
                     <script
                        src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
                     <script
                        src="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js"></script>
                  </html>