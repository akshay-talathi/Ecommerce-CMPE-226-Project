<!DOCTYPE html>
<html>

<head>
    <title>Products</title>
    <link href="/../style.css" rel="stylesheet">
    <script src="/../js/all.js" type="text/javascript"></script>
</head>

<body>
    <h2 align="center">View Products</h2>


    <span class="login"><h4>Welcome: </h4><strong><h1><%=sess.firstname%>&nbsp;<%=sess.lastname%></h1><strong></span>


    <div class="page-container">
        <div class="page-data" align="center">
            <div class="data-btn" align="center"></div>
            <a button class="btn btn-primary" href="/home">Home</a><span>
                
                <a button class = "btn btn-warning" href="/products">View Products</a><span>
                <a button class = "btn btn-info" href="/orders">View Orders</a><span>
                                
                
                    
                    <a button class = "btn btn-success"  href="/products/add">Add Products</a><span>
                  <hr>

<ul>
                    <li>
                    <a href="/logout" role="button" class=""> Logout</a>
                    </li>
                   </ul>

                    <table border="1" cellpadding="17" cellspacing="7" align="center">
                        <tr>
                            <th width="50px">No</th>

                            <th>Name</th>

                            <th>Quantity Available</th>
                            <th>Image</th>
                            <th>Price </th>
                            <th>Edit</th>

                            <th>Delete</th>
                        </tr>
                        <%
                        for(var i=0;i<data.length;i++){

                        %>
                        <tr>
                          <td width="50px"> <%=i+1 %></td>

                            <td><%=data[i].productName %></td>

                            <td><%=data[i].productQuantity %></td>

                          <th>  <img src="<%=data[i].productImage%>" alt= "<%=data[i].productName%>" width="350", height="50"/></th>

                            <td><%=data[i].productPrice %></td>

                           <td> <a button class="btn btn-primary" href="/products/edit/<%=data[i].product_id%>">Edit</a></td>
                           
                            <td>    <a button class="btn btn-danger" href="/deleteProducts/<%=data[i].product_id%>">Delete</a> </td>
                           
                           
                            
                        </tr> <%}%>
                    </table>
                </div>

            </div>
        </div>
    </div>
</body>


<link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css">
<link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap-theme.min.css">
<script
    src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script
    src="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js"></script>


</html>